@model VideoStore.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayoutPage.cshtml";
}

<h3>Login</h3>
@using(Html.BeginForm("Login","Users", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.UserName)
        @Html.TextBoxFor(m=>m.UserName, new { @class = "form-control" })    
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.UserEmail)
        @Html.TextBoxFor(m=>m.UserEmail, new { @class = "form-control"})
    </div>
    <input type="submit" class="btn btn-primary" value="LogIn" />
}